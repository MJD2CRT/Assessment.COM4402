SUBROUTINE BuildTopicQuiz(question_bank, selected_topic)
    Get selected_topic questions from question_bank
    Set quiz_questions = 10 questions for selected_topic
    RETURN quiz_questions
END SUBROUTINE



SUBROUTINE RunQuiz(quiz_questions)
    Set user_answers = empty list
    Set question_number = 1

    WHILE question_number ≤ 10 DO
        OUTPUT "Question " + question_number
        OUTPUT quiz_questions[question_number].question_text
        OUTPUT "A) " + quiz_questions[question_number].options.A
        OUTPUT "B) " + quiz_questions[question_number].options.B
        OUTPUT "C) " + quiz_questions[question_number].options.C
        OUTPUT "D) " + quiz_questions[question_number].options.D

        REPEAT
            Input answer
            Convert answer to uppercase

            IF answer is "A" OR "B" OR "C" OR "D" THEN
                valid_answer = TRUE
            ELSE
                OUTPUT "Invalid input,answer again"
                valid_answer = FALSE
            END IF
        UNTIL valid_answer == TRUE

        Store answer into user_answers
        question_number = question_number + 1
    END WHILE

    RETURN user_answers
END SUBROUTINE



SUBROUTINE MarkAndDisplayResults(quiz_questions, user_answers)
    Set score = 0
    Set i = 1

    WHILE i ≤ 10 DO
        correct = quiz_questions[i].correct_letter

        IF user_answers[i] == correct THEN
            score = score + 1
        END IF

        i = i + 1
    END WHILE

    OUTPUT "Your final Score is: " + score + "/10"

    IF score ≥ 9 THEN
        OUTPUT "Excellent!!"
    ELSE IF score ≥ 6 THEN
        OUTPUT "Good job!"
    ELSE
        OUTPUT "Maybe next time:("
    END IF

    OUTPUT "Answer Review after quiz:"

    FOR i FROM 1 TO 10 DO
        OUTPUT "Q" + i + ": " + quiz_questions[i].question_text
        OUTPUT "Your answer: " + user_answers[i]
        OUTPUT "Correct answer: " + quiz_questions[i].correct_letter
