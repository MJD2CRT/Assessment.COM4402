MODULE TITLE:   Programming
ASSIGNMENT:     Quiz Program Pseudocode (15% of module grade)

BEGIN PROGRAM

OUTPUT welcome message and rules
OUTPUT "You will have to answer 10 questions."
OUTPUT "You will NOT be told the correct answer until the end of the quiz."
OUTPUT "Enter A, B, C, or D for each question."

CALL InitialiseQuestionBank
STORE returned value in question_bank

REPEAT
    OUTPUT "Choose a topic:"
    OUTPUT "1. History"
    OUTPUT "2. General Knowledge"
    OUTPUT "3. Coding"
    OUTPUT "4. Bible"
    INPUT topic_choice

    IF topic_choice == 1 THEN
        selected_topic = "History"
        valid_topic = TRUE
    ELSE IF topic_choice == 2 THEN
        selected_topic = "General Knowledge"
        valid_topic = TRUE
    ELSE IF topic_choice == 3 THEN
        selected_topic = "Coding"
        valid_topic = TRUE
    ELSE IF topic_choice == 4 THEN
        selected_topic = "Bible"
        valid_topic = TRUE
    ELSE
        OUTPUT "Invalid choice, re-enter your choice"
        valid_topic = FALSE
    END IF
UNTIL valid_topic == TRUE

CALL BuildTopicQuiz USING question_bank AND selected_topic
STORE returned value in quiz_questions

CALL RunQuiz USING quiz_questions
STORE returned value in user_answers

CALL MarkAndDisplayResults USING quiz_questions AND user_answers

OUTPUT "Do you want to play again? (Y/N)"
Input play_again
Convert play_again to uppercase

WHILE play_again is not "Y" AND play_again is not "N" DO
    OUTPUT "Invalid input. Enter Y or N."
    Input play_again
    Convert play_again to uppercase
END WHILE

IF play_again == "Y" THEN
    GO TO Topic selection step
ELSE
    OUTPUT "Thanks for playing!"
END IF

END PROGRAM



